{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Pacman (tinyMaze)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/pacman.py",
            "args": [
                "-l", "tinyMaze",
                "-p", "SearchAgent"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Pacman (bigMaze with A* and Manhattan Heuristic)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/pacman.py",
            "args": [
                "-l", "bigMaze",
                "-z", ".5",
                "-p", "SearchAgent",
                "-a", "fn=astar,heuristic=manhattanHeuristic",
                "--frameTime", "0"
            ],
            "console": "integratedTerminal"
        }
    ]
}
